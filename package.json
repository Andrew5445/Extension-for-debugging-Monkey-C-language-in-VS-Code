{
  "name": "monkeyc-debug",
  "displayName": "Monkey C debugger",
  "version": "0.42.2",
  "publisher": "ondrejvrana",
  "description": "Monkey C debugger extension",
  "author": {
    "name": "Ondřej Vrána",
    "email": "ondrejvrana.ondy@gmail.com"
  },
  "license": "MIT",
  "keywords": [
    "multi-root ready"
  ],
  "engines": {
    "vscode": "^1.48.0"
  },
  "icon": "images/mock-debug-icon.png",
  "categories": [
    "Debuggers"
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/vscode-mock-debug.git"
  },
  "bugs": {
    "url": "https://github.com/Microsoft/vscode-mock-debug/issues"
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "await-notify": "1.0.1",
    "fs-extra": "^9.1.0",
    "node-cmd": "^3.0.0",
    "vscode-debugadapter": "1.41.1",
    "xml2js": "^0.4.23",
    "glob": "^7.1.6"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "@types/vscode": "^1.48.0",
    "@types/xml2js": "^0.4.8",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "glob": "^7.1.6",
    "mocha": "^8.0.1",
    "typescript": "^3.8.3",
    "vsce": "1.78.0",
    "vscode-debugadapter-testsupport": "1.41.0"
  },
  "main": "./out/extension",
  "activationEvents": [
    "onDebug",
    "onDebugDynamicConfigurations:monkeyc",
    "onCommand:extension.monkeyc-debug.getProgramName",
    "onCommand:extension.monkeyc-debug.runEditorContents",
    "onCommand:extension.monkeyc-debug.debugEditorContents",
    "onCommand:extension.monkeyc-debug.config",
    "onCommand:extension.monkeyc-debug.UnitTests",
    "onCommand:extension.monkeyc-debug.restartDebuggingSession",
    "onCommand:extension.monkeyc-debug.createProjectFromTemplate"
  ],
  "contributes": {
    "menus": {
      "commandPalette": [],
      "editor/title": [
        {
          "command": "extension.monkeyc-debug.runEditorContents",
          "when": "resourceLangId == monkeyc",
          "group": "1_run@10"
        },
        {
          "command": "extension.monkeyc-debug.debugEditorContents",
          "when": "resourceLangId == monkeyc",
          "group": "1_run@20"
        }
      ],
      "debug/variables/context": [
        {
          "command": "extension.monkeyc-debug.showAsHex",
          "when": "debugConfigurationType == 'monkeyc' && debugProtocolVariableMenuContext == 'simple'"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.monkeyc-debug.debugEditorContents",
        "title": "Debug File",
        "icon": "$(debug-alt)"
      },
      {
        "command": "extension.monkeyc-debug.runEditorContents",
        "title": "Run File",
        "icon": "$(play)"
      },
      {
        "command": "extension.monkeyc-debug.showAsHex",
        "title": "Show as Hex"
      },
      {
        "command": "extension.monkeyc-debug.config",
        "title": "Configure Monkey C debugger"
      },
      {
        "command": "extension.monkeyc-debug.UnitTests",
        "title": "Run Unit Tests"
      },
      {
        "command": "extension.monkeyc-debug.sendMessageToWebView",
        "title": "Send Message To Panel Webview"
      },
      {
        "command": "extension.monkeyc-debug.createProjectFromTemplatee",
        "title": "Create Connect IQ project from template"
      }
    ],
    "breakpoints": [
      {
        "language": "monkeyc"
      }
    ],
    "debuggers": [
      {
        "type": "monkeyc",
        "label": "Monkey C Debug",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a text file.",
                "default": "${workspaceFolder}/${command:AskForProgramName}"
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": true
              },
              "projectPath": {
                "type": "string",
                "description": "Project path",
                "default": true
              },
              "sdkPath": {
                "type": "string",
                "description": "Connect IQ SDK path",
                "default": true
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "monkeyc",
            "request": "launch",
            "name": "Ask for file name",
            "program": "${workspaceFolder}/${command:AskForProgramName}",
            "projectPath": "",
            "sdkPath": ""
          }
        ],
        "configurationSnippets": [
          {
            "label": "Monkey C Debug: Launch",
            "description": "A new configuration for 'debugging' a user selected markdown file.",
            "body": {
              "type": "monkeyc",
              "request": "launch",
              "name": "Ask for file name",
              "program": "^\"\\${workspaceFolder}/\\${command:AskForProgramName}\"",
              "workspaceFolder": "^\"\\${workspaceFolder}",
              "stopOnEntry": true
            }
          }
        ],
        "variables": {
          "AskForProgramName": "extension.monkeyc-debug.getProgramName"
        }
      }
    ]
  }
}
